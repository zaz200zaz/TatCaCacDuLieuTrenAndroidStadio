<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graident">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/cardView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp">

                    <ImageView
                        android:id="@+id/profile_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_img" />
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ニックネーム " />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ユーザー名 アカウント " />
                </TableRow>

            </TableLayout>

            <TableRow
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/cardView2"
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/profile_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bo_suu_tap_img" />
                </androidx.cardview.widget.CardView>

            </TableRow>

        </TableRow>

        <TableRow
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person_search_img" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="個人情報 " />

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dau_lon_hon_img"
                android:text=">" />
        </TableRow>

        <TableRow
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/lock_reset_img" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="パスワード変更 " />

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dau_lon_hon_img"
                android:text=">" />
        </TableRow>

        <TableRow
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logout_img" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ログアウト " />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/edtText"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#E8E0E0"
        android:paddingHorizontal="20dp"

        android:paddingVertical="5dp"
        android:paddingBottom="5dp"
        android:weightSum="2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">>

        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgChatGamen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/message_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/imgRenrakuSaki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/renraku_saki_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/imgHatkken"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/hakken_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/imgJibun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/jibun_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtChatGamen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/message_image"
                android:text="チャット"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtimgRenrakuSaki"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/renraku_saki_img"
                android:text="連絡先"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView

                android:id="@+id/txtimgHatkken"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/hakken_img"
                android:text="発見"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtimgJibun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/jibun_image"
                android:text="自分"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>