<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mix_colo2"
    tools:context=".MainActivity2"
    >


    <TableLayout
        android:weightSum="9"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="姓　　名:" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtNameId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="name" />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="フリガナ:" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtHuRiGaNaNameId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="canh doc" />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="性　　別:" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtseibetsuId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="gioi tinh " />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="生年月日："
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtTanjyoBiId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ngay thang nam sinh" />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="国　　籍：" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtKokusekiId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="quoc gia" />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="郵便番号:" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtYuuBinBanGoId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="so buu dien" />
        </TableRow>

        <TableRow

            android:layout_weight="2"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="住　　所：" />

            <TextView

                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtJyuSyoId"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:hint="dia chi song" />
        </TableRow>

        <TableRow

            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="電話番号:"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_weight="8"
                android:id="@+id/txtDenWaBangGoId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="sdt" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>